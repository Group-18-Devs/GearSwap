<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GearSwap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4169E1</item>
        <item name="colorPrimaryVariant">#181829</item>
        <item name="colorOnPrimary">#D3D3D3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA500</item>
        <item name="colorSecondaryVariant">#EE6C4D</item>
        <item name="colorOnSecondary">#003E1F</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/bebas_neue</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- For API 21+ -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorPrimaryVariant</item>
        <!-- Customize title color -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/bebas_neue</item>
    </style>
</resources>