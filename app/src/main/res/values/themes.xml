<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GearSwap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4169E1</item>
        <item name="colorPrimaryVariant">#181829</item>
        <item name="colorOnPrimary">#D3D3D3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA500</item>
        <item name="colorSecondaryVariant">#EE6C4D</item>
        <item name="colorOnSecondary">#003E1F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/bebas_neue</item>
    </style>

    <!-- StyledButton style added below -->
    <style name="StyledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="colorPrimaryVariant">#181829</item>

