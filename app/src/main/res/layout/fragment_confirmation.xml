<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.home.checkout.ConfirmationFragment">

    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Monday, 1 May, 2022"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/confirmationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/confirmationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please confirm your transaction"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/confirmationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/firstSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/confirmationDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/rentTotalLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rent Total"
        app:layout_constraintTop_toBottomOf="@id/firstSeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/rentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1,000"
        app:layout_constraintTop_toTopOf="@id/rentTotalLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/taxFeeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tax Fee"
        app:layout_constraintTop_toBottomOf="@id/rentTotalLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/taxFeeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50.00"
        app:layout_constraintTop_toTopOf="@id/taxFeeLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/secondSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/taxFeeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/secondSeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1050.00"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/totalLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/confirmAndPayButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm and Pay"
        android:backgroundTint="#066af9"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/totalValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

